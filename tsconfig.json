{
  "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.d.ts", "electron.d.ts"],
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "node"]
  }
}
